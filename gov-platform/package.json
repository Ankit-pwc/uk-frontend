{
  "name": "gov-platform",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/gov-portal/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "postinstall": "yarn run dedupe",
    "dedupe": "yarn yarn-deduplicate -s fewer yarn.lock",
    "clean": "rimraf \"**/dist\" \"**/.vite\"",
    "dev": "yarn workspace uk-portal dev",
    "dev:watch": "concurrently -k -n modules,app -c auto \"yarn workspace @gov/modules dev\" \"yarn workspace uk-portal dev\"",
    "build": "yarn workspace @gov/modules build && yarn workspace uk-portal build",
    "build:app": "yarn workspace uk-portal build",
    "preview": "yarn workspace uk-portal preview --strictPort",
    "test": "yarn workspaces run test || true",
    "ws:info": "yarn workspaces info",
    "ci": "yarn --frozen-lockfile && yarn run dedupe && yarn ws:info && yarn build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@reduxjs/toolkit": "^2.2.1",
    "@sentry/react": "^7.118.0",
    "@sentry/tracing": "^7.118.0",
    "@tanstack/react-query": "^4.36.1",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.52.0",
    "react-redux": "^8.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/react-vite": "^8.1.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "vite": "^5.3.1",
    "yarn-deduplicate": "^6.0.2"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
