{
  "name": "gov-platform",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/gov-portal/*",
    "packages/gov-portal/modules/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "//---------------- Core ----------------": "────────",
    "dev:core": "yarn workspace @gov/core dev",
    "build:core": "yarn workspace @gov/core build",
    "clean:core": "yarn workspace @gov/core clean",
    "//---------------- BPA -----------------": "────────",
    "dev:bpa": "yarn workspace @gov/mod-bpa dev",
    "build:bpa": "yarn workspace @gov/mod-bpa build",
    "clean:bpa": "yarn workspace @gov/mod-bpa clean",
    "//---------------- TL ------------------": "────────",
    "dev:tl": "yarn workspace @gov/mod-tl dev",
    "build:tl": "yarn workspace @gov/mod-tl build",
    "clean:tl": "yarn workspace @gov/mod-tl clean",
    "//---------------- App -----------------": "────────",
    "dev:app": "yarn workspace uk-portal dev",
    "build:app": "yarn workspace uk-portal build",
    "preview:app": "yarn workspace uk-portal preview --strictPort",
    "clean:app": "yarn workspace uk-portal clean",
    "//------------- Utilities --------------": "────────",
    "clean": "rimraf \"**/dist\" \"**/.vite\"",
    "dedupe": "yarn yarn-deduplicate -s fewer yarn.lock",
    "postinstall": "yarn run dedupe",
    "ws:info": "yarn workspaces info",
    "test": "yarn workspaces run test || true",
    "//------ Optional combined flows -------": "────────",
    "dev": "concurrently -k -n core,bpa,tl,app -c auto \"yarn dev:core\" \"yarn dev:bpa\" \"yarn dev:tl\" \"yarn dev:app\"",
    "build": "yarn build:core && yarn build:bpa && yarn build:tl && yarn build:app",
    "ci": "yarn --frozen-lockfile && yarn run dedupe && yarn ws:info && yarn build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@reduxjs/toolkit": "^2.2.1",
    "@sentry/react": "^7.118.0",
    "@sentry/tracing": "^7.118.0",
    "@tanstack/react-query": "^4.36.1",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.52.0",
    "react-redux": "^8.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/react-vite": "^8.1.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "react-router-dom": "5.3.4",
    "rimraf": "^5.0.0",
    "vite": "^5.3.1",
    "yarn-deduplicate": "^6.0.2"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}